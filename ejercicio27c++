#include<iostream>
using namespace std;
int main() {
    char nombre[20];
    int contrase単a;
    int errores=3;
    int root=1234;

    do {

        cout<<"cual es tu contrase単a \n";
       cin>>contrase単a;
       cout<<"cual es tu nombre?\n";
        cin>>nombre;

        if (contrase単a ==root){ 
           cout<<"acceso permitido\n";
           errores--;
           break;
        } else {
            cout<<"acceso negado\n";
        }

    } while (errores>0);
    if(errores=0){
        cout<<"numero de intentos pasado\n";
    }


    return 0;
}

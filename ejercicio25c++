#include <iostream>
using namespace std;

int main() {
    int num, menor,mayor,acum=0; 

   cout<<"Ingrese 10 numeros enteros:\n";
    cin>>num;
    menor = num;
    int igual=num;

    for (int i = 1; i < 10; i++) {
        cin>>num;
        acum=acum+num;

        if (num < menor) {
            menor = num;
        }
        else(num>menor);{
            mayor=num;
        }
        
    }

    cout<<"El numero menor es:"<< menor<<endl;
    cout<<"El numero mayor es "<<mayor;
    cout<<"La suma de los numeros es "<<acum;
    return 0;
}
